@using BookLibary.Web.Dtos
@model List<ResultBookDto> 
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Yazar</th>
            <th scope="col">Durum</th>
            <th scope="col">###</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var tableclass = "";
            if (item.Durum==1)
            {
                tableclass = "table-success";
            }
            if(item.Durum==0)
            {
                tableclass = "table-danger";
            }
            <tr class="@tableclass">
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Yazar</td>
                @if (item.Durum==1)
                {
                    <td>Var</td>

                }
                else
                {
                    <td>Yok</td>
                }
              <td>
                  <a asp-controller="BookLibary" asp-action="Edit" asp-route-id="@item.Id" >Düzenle</a>
                    <a asp-controller="BookLibary" asp-action="Edit" asp-route-id="@item.Id">Sil</a>
              </td>
            </tr>

            
        }
      
     </tbody>
</table>